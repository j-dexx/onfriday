<% determine_page_node %>

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">

<head>
	<link rel="shortcut icon" href="/favicon.ico" />
	
	<title><%= h("#{SiteSetting.find_by_name("Site Name").value} - #{yield(:title) || "Untitled"}") %></title>

  <%= yield :additional_stylesheets if yield :additional_stylesheets %>	
	<%= stylesheet_link_tag "webstyle.css" %>
	<%= stylesheet_link_tag "tnymc.css" %>
	
	<%= javascript_include_tag :defaults %>
	<% if @include_tinymce_script -%>
	  <%= javascript_include_tag "tiny_mce/tiny_mce.js" %>
	  <%= javascript_include_tag "tiny_mce_config" %>
	<% end -%>
	
	<%= javascript_include_tag "swfobject.js"  %>
	
	<meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
	
	<%= yield :head %>

<!--[if lt IE 7]>
<style type="text/css">
  .bags, .basket_checkout_navigation span { behavior: url(../iepngfix.htc); }
</style>
<![endif]-->

  <meta name="google-site-verification" 
content="pVFDCRB7FJMmKlRTd_GqbVqC_7iw2-Fcbbfpnn6lW3o" />

  
</head>


<body>
	
<%# render :partial => "shared/admin_widget" %>

<div class="maincontainer">
	<p class="skip"><a href="#content" accesskey="s">Skip to the main content</a></p>
	
	<div class="top">
		<%= link_to image_tag("logo.gif", :alt => SiteSetting.find_by_name("Site Name").value, :title => SiteSetting.find_by_name("Site Name").value, :border => "0", :hspace => "0", :vspace => "0", :class => "logo"), {:controller => 'web', :action => 'index'} %>
		<div class="top_right">
        	<%= render "users/navigation" %>
			<%= render "shared/search" %>
            <%= render "baskets/navigation" %>
		</div>
	</div>

	<div class="navigation">
  		<%= render :partial => "shared/top_navigation" %>
	</div>
  
	<div id="content">
		
		<%- unless hide_flash? -%>
		  <%- flash.each do |name, msg| -%>
				<%= content_tag(:div, msg, :id => "flash_#{name}") unless flash[name].nil? %>
			<%- end -%>
		<%- end -%>
		
		<% if hide_left? && hide_right? %>
		
			<%= @content_for_layout %>
			
		<% elsif hide_left? %>
			
			<div class="content_left">
				<%= @content_for_layout %>
			</div>
			
			<div class="right">
				<%= yield :right %>	
			</div>
			
		<% elsif hide_right? %>
		
			<div class="left">
				<%= yield :left %>	
			</div>
			
			<div class="content_right">
				<%= @content_for_layout %>
			</div>
		
		<% else %>
			
			<div class="left">
				<%= yield :left %>	
			</div>
			
			<div class="content_middle">
				<%= @content_for_layout %>
			</div>
			
			<div class="right">
				<%= yield :right %>	
			</div>
			
		<% end %>
			
  	
    <div class="clear"></div>
	</div>
	
	
<div class="footer">
	
  <div class="footer_cols">
  		
      <div class="footer_col_1">
      	<%= link_to_page "The Onfriday thing. What are we all about?", "The onfriday Thing", {:class=>"about_button"} %>
      	<p><%= link_to_page "Big heart, small footprint<span>Trying to do our bit</span>", "Big Heart Small Footprint" %></p>
        <p><%= link_to_page "Be part of it<span>Ways you can get involved</span>", "Be Part Of It" %></p>
        <p><%= link_to_page "Behind the brands<span>Every bag tells a story</span>", "Behind the brands" %></p>
        <p><%= link_to_page "In the spotlight<span>Some thoughts from our designers</span>", "In the Spotlight" %></p>
      </div>
      
      <div class="footer_col_2">
      	<h2><%= link_to_page "Our Gift Services", "Gift Service" %></h2>
      	<p>
					<%= link_to_page image_tag("footer_gift_service.gif", :alt => "Its a wrap", :title => "Its a wrap"), "Gift Service" %>
          <%= link_to_page "It's a wrap<span>You choose, we wrap, it's that simple</span>", "Gift Service" %>
        </p>
        <p>
        	<%= link_to_page image_tag("footer_gift_vouchers.gif", :alt => "Gift vouchers", :title => "Gift Voucher"), "Gift Service" %>
					<%= link_to_page "Gift vouchers<span>No need for risky guess work any more</span>", "Gift Service" %>
        </p>
        <p>
        	<%= link_to_page image_tag("footer_gift_wishlists.gif", :alt => "Gift wishlists", :title => "Gift wishlists"), "Gift Service" %>
					<%= link_to_page "Gift wishlists<span>Invite your friends and family to chip in</span>", "Gift Service" %>
        </p>
      </div>
      
      <div class="footer_col_3">
      	<a href="<%= SiteSetting.value("Facebook") %> " target="_blank"><%= image_tag "footer_facebook.gif", :alt => "Become an onfriday fan on Facebook", :title => "Become an onfriday fan on Facebook", :border => "0", :hspace => "0", :vspace => "0" %></a>
        <h2 class="tweet_title">Tweet Tweet</h2>
        <%= render "/web/twitter" %>
        <%= image_tag "footer_tweet_bottom.gif", :alt => " ", :border => "0", :hspace => "0", :vspace => "0", :style => "float: left;" %>
      </div>
  		
      <div class="footer_col_4">
      	<a href="http://onfriday-ethical-bags.blogspot.com" target="_blank" class="footer_blog">Blog onfriday<span>You heard it here first!</span></a>
        <h2>Newsletter</h2>
        <p>Pop in your email address to receive our newsletter</p>
        <% form_for NewsletterSubscriber.new do |f| %>
          <p>
          <%= f.error_messages :id => "flash_error", :header_message => nil %>
          <%= f.text_field :email, :style=>"float: left;" %><br />
          <%= f.submit "" %>
          </p>
        <% end %> 
      </div>
      
  </div>


	
        <div class="footer_bottom clear">
            <div class="footer_left">
            <p>
                <%= link_to "Delivery &amp; Returns", :controller=>"page", :action=>"delivery-and-returns" %> | 
                <%= link_to "Ordering", :controller=>"page", :action=>"safe-and-easy-ordering" %> | 
                <%= link_to "Privacy Policy", :controller=>"page", :action=>"privacy-policy" %> | 
                <%= link_to "Terms &amp; Conditions", :controller=>"page", :action=>"terms-and-conditions" %> |  
                <%= link_to_page "Press &amp; Media", "Press and Media", :behaviour => "hide" %>
            </p>
            <div class="font_small">
                <a href="">&copy; <%= h SiteSetting.find_by_name("Site Name").value %></a> | 
                <a href="http://www.eskimosoup.co.uk" target="_blank">Web design by eskimosoup</a> | 
                <%= link_to "Accessibility", {:controller => "web", :action => "accessibility"}, {:accesskey => "1"} %> | 
                <a href="http://validator.w3.org/check?uri=referer" target="_blank">Valid XHTML</a> | 
                <a href="http://jigsaw.w3.org/css-validator/check/referer" target="_blank">Valid CSS</a> | 
                <%= link_to "Site Map", {:controller => "web", :action => "site_map"}, {:accesskey => "s"} %>
            </div>
            </div>
            <div class="footer_right"><p><%= image_tag "payment_icons.gif", :alt=>"Accepted Payment Types" %></p></div>     
		</div>
</div>
	
</div>

