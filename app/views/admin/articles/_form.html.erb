<% form_for [:admin, @article], :html => {:multipart => true} do |f| %>
  <%= f.error_messages %>

  <fieldset>
  <legend>Basic Information</legend>
  <p>
    <%= f.label :name, "Headline" %><br />
    <%= f.text_field :name %>
  </p>
  
  <p>
    <%= f.label :date, "Publication Date" %><br />
    <%= f.calendar_date_select :date %>
  </p>

  <p>
    <%= f.label :summary, "Short Summary" %><br />
    <%= f.text_area :summary %>
  </p>
  </fieldset>
  
  <fieldset>
  <legend>Details</legend>
  <p>
    <%= f.label :body, "Main Article" %><br />
    <%= f.advanced_text_area :body %>
  </p>
  
  <%= image_field_tag f, :article, :image %>
  
  <p>
    <%= f.label :tags %><br />
    <%= f.tag_field :tags %>
  </p>
  </fieldset>
  
  <p>
    <%= f.label :display %>
    <%= f.check_box :display %>
  </p>
  
  <p><%= f.submit %></p>
<% end %>
