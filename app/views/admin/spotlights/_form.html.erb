<% form_for [:admin, @spotlight], :html => {:multipart => true} do |f| %>
  <%= f.error_messages %>

  <fieldset>
    <legend>Basic</legend>
    
    <p>
      <%= f.label :designer %><br />
      <%= f.text_field :designer %>
    </p>

    <p>
      <%= f.label :company %><br />
      <%= f.text_field :company %>
    </p>

    <p>
      <%= f.label :brand_id %><br />
      <%= f.collection_select :brand_id, Brand.unrecycled, :id, :name, :include_blank => true %>
    </p>
    
    <p>
      <%= f.label :summary %><br />
      <%= f.text_area :summary %>
    </p>
  </fieldset>
  
  <fieldset>
    <legend>Detailed</legend>
    
    <p>
      <%= f.label :content %><br />
      <%= f.advanced_text_area :content %>
    </p>

    <%= image_field_tag f, :spotlight, :image %>
  </fieldset>
  
  <p><%= f.submit "Submit" %></p>
<% end %>
