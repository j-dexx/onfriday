<fieldset>
	<legend>Content</legend>
	
	<p>
	  <%= f.label :title %><br />
	  <%= f.text_field :title %>
	</p>
	
	<p>
	  <%= f.label :brand_id %><br />
	  <%= f.collection_select :brand_id, Brand.unrecycled, :id, :name, :include_blank => true %>
	</p>
	
	<p>
	  <%= f.label :designer %><br />
	  <%= f.text_field :designer %>
	</p>
	
	<p>
	  <%= f.label :company %><br />
	  <%= f.text_field :company %>
	</p>
	
	
	<p>
	  <%= f.label :introduction %><br />
	  <%= f.text_area :introduction %>
	</p>
	
	<p>
	  <%= f.label :main_content %><br />
	  <%= f.advanced_text_area :main_content %>
	</p>
	
	<%= image_field_tag f, "page_node[page_contents_attributes][0]", :image %>
	
</fieldset>

<fieldset>
	<legend>Additional Information</legend>

	<p>
	  <%= f.label :navigation_title %><br />
	  <%= f.text_field :navigation_title %>
	</p>
	
	<p>
	  <%= f.label :meta_description %><br />
	  <%= f.text_area :meta_description %>
	</p>
	
	<p>
	  <%= f.label :meta_tags %><br />
	  <%= f.text_area :meta_tags %>
	</p>

</fieldset>
